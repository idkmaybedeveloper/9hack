<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="40sp"
        android:id="@+id/headingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/permissions_headingText"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/explanationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/permissions_explanationText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/headingTextView"
        app:layout_constraintStart_toStartOf="@+id/headingTextView"
        app:layout_constraintTop_toBottomOf="@+id/headingTextView"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/permLayout"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explanationTextView">
        <CheckBox
            android:textSize="24sp"
            android:id="@+id/checkBox1"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:checked="false"
            android:text="@string/permCheckbox1_Text"
            android:textAlignment="viewStart"/>
        <CheckBox
            android:textSize="24sp"
            android:id="@+id/checkBox2"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/permCheckbox2_Text"
            android:textAlignment="viewStart"/>
        <CheckBox
            android:textSize="24sp"
            android:id="@+id/checkBox3"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/permCheckbox3_Text"
            android:textAlignment="viewStart"/>
    </LinearLayout>
    <Button
        android:enabled="false"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/startButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/permissions_startButtonText"
        android:checkable="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


